<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.isec.ans.tstrascunho">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".Aplicacao"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="JuniorPaint"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SolidoActivity" android:screenOrientation="sensorLandscape" />
        <activity android:name=".GaleriaActivity" android:screenOrientation="sensorLandscape" />
        <activity android:name=".CameraActivity" android:screenOrientation="sensorLandscape" />
        <activity android:name=".HistoricoActivity" android:screenOrientation="sensorLandscape" />
        <activity android:name=".DesenhoActivity" android:screenOrientation="sensorLandscape"></activity>


    </application>

</manifest>