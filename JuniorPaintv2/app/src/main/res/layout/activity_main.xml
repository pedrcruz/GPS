<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffe0"
    android:padding="20dp"
    tools:context="pt.isec.ans.tstrascunho.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:background="#808080"
        android:padding="20dp"
        android:text="Rascunho"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="Fundo sólido"
            android:textSize="24sp"
            android:onClick="onSolido"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="Imagem galeria"
            android:textSize="24sp"
            android:onClick="onGaleria"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="Imagem capturada"
            android:textSize="24sp"
            android:onClick="onCamera"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="Histórico"
            android:textSize="24sp"
            android:onClick="onHistorico"/>
    </LinearLayout>

</FrameLayout>
