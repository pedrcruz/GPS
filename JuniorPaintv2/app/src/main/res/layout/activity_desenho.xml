<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isec.ans.tstrascunho.DesenhoActivity"
    android:id="@+id/frDesenha">


    <LinearLayout

        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"

        android:layout_weight="1"
        android:background="#aaa"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/lapis"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/balde" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/borracha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cor1"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="@android:color/white" />

                <TextView

                    android:id="@+id/cor2"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="@android:color/holo_blue_bright" />

                <TextView
                    android:id="@+id/cor3"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#ffc0cd" />

                <TextView
                    android:id="@+id/cor4"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/cor5"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#800080" />

                <TextView
                    android:id="@+id/cor6"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#a52a2a" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cor7"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/cor8"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#ffa500" />

                <TextView
                    android:id="@+id/cor9"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#00ff44" />

                <TextView
                    android:id="@+id/cor10"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#ffff00" />

                <TextView
                    android:id="@+id/cor11"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#ff0000" />

                <TextView
                    android:id="@+id/cor12"
                    android:onClick="onChoosingColor"
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:background="#321ac7" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frAreaDesenho"
        android:layout_marginLeft="80dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#FFFFCC"
       android:orientation="horizontal"
       android:layout_gravity="right"
       android:layout_marginTop="62dp"
       android:padding="6dp"
       android:layout_weight="1">
   </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#aaa"
        android:layout_marginLeft="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="#aaa"
        android:layout_weight="17"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carimbo1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_barco"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_basket"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_bola"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_sol"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/c_cao"
        android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_nave"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/carimbo7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/c_carro"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#aaa"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_menu_save"
            android:layout_gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#aaa"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/home"
            android:layout_gravity="end"/>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>

